- @needs.each do |need|
  %div
    = "#{need.supplies.sum(:quantity)} / #{need.requested_quantity}"
    = need.need_type.um
    = "(#{need.percent_completed}%)"

  .progress.progress-striped
    .bar{:style => "width: #{need.percent_completed}%;" }


  = link_to "DONA!", new_organization_need_supply_path(need.organization, need), :class=>"btn btn-huge btn-primary"
